{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug LETKF",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/letkf",
            "args": ["${workspaceFolder}/applications/data_assimilation/ensemble/config.yaml"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "GLOG_logtostderr",
                    "value": "1"
                },
                {
                    "name": "GLOG_v",
                    "value": "2"
                },
                {
                    "name": "GLOG_colorlogtostderr",
                    "value": "1"
                },
                {
                    "name": "GLOG_minloglevel",
                    "value": "0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set breakpoint pending on",
                    "text": "-gdb-set breakpoint pending on",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug forecast Example",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/forecast",
            "args": ["${workspaceFolder}/applications/forecast/config.yaml"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "environment": [
                {
                    "name": "GLOG_logtostderr",
                    "value": "1"
                },
                {
                    "name": "GLOG_v",
                    "value": "2"
                },
                {
                    "name": "GLOG_colorlogtostderr",
                    "value": "1"
                },
                {
                    "name": "GLOG_minloglevel",
                    "value": "0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set breakpoint pending on",
                    "text": "-gdb-set breakpoint pending on",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}